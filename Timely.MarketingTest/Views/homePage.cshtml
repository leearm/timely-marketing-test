@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Pull in Umbraco values
    var pageTitle = Model.Value<string>("pageTitle") ?? "Timely";
    var mainParagraph = Model.Value<string>("mainParagraph") ?? "";
    var subParagraph = Model.Value<string>("subParagraph") ?? "";
    var rightSideParagraph = Model.Value<string>("rightSideParagraph") ?? "";

    // Media Picker (single image)
    var hero = Model.Value<IPublishedContent>("heroImage");
    var heroUrl = hero?.Url() ?? "/images/fallback-hero.jpg";
}

<div id="react-root"
     data-page-title="@pageTitle"
     data-hero-url="@heroUrl"
     data-main-paragraph="@mainParagraph"
     data-sub-paragraph="@subParagraph"
     data-right-side-paragraph="@rightSideParagraph">
</div>
